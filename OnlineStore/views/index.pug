extends layout

block content

    // Page Content


    .col-lg-3
       h1.my-4 Amaze On

    // /.col-lg-3
    .col-lg-9
       #carouselExampleIndicators.carousel.slide.my-4(data-ride='carousel')
           ol.carousel-indicators
               li.active(data-target='#carouselExampleIndicators', data-slide-to='0')
               li(data-target='#carouselExampleIndicators', data-slide-to='1')
               li(data-target='#carouselExampleIndicators', data-slide-to='2')
           .carousel-inner(role='listbox')
               .carousel-item.active
                   img.d-block.img-fluid(src='/Amazon_logo.png', alt='First slide')
               .carousel-item
                   img.d-block.img-fluid(src='http://placehold.it/900x350', alt='Second slide')
               .carousel-item
                   img.d-block.img-fluid(src='http://placehold.it/900x350', alt='Third slide')
           a.carousel-control-prev(href='#carouselExampleIndicators', role='button', data-slide='prev')
               span.carousel-control-prev-icon(aria-hidden='true')
               span.sr-only Previous
           a.carousel-control-next(href='#carouselExampleIndicators', role='button', data-slide='next')
               span.carousel-control-next-icon(aria-hidden='true')
               span.sr-only Next


       h1 #{title}
       br

       .row.row-cols-1.row-cols-md-3
            each article, i in articles
                .col.mb-4
                    .card
                        img.card-img-top(src='data:image/png;base64,' +article.imagePath+'', alt='...', class='image-responsive')
                        .card-body
                            h5=article.title
                            .price=article.price
                            p=article.body
                            //form(method='POST', action='/articles/cart')
                            //    input(hidden='', value='#{article._id}', name='productId')
                            //    a.btn.btn-primary Add to cart

                            form(action='article/cart', method='POST')
                                input(hidden='', value=article.id, name='articleId')
                                a.btn.btn-primary(href='articles/cart/'+article.id+'', type='button', class='mx-2')
                                    i.fa.fa-shopping-cart
                                    |  Add to cart

