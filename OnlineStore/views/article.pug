extends layout

block content
    h1 #{title}
    br

    each article, i in articles
        ul.list-group
            li.list-group-item.d-flex.justify-content-between.align-items-center
                | #{article.title}
                | #{article.price}

                ul.nav.justify-content-end
                    form(action='/articles/cart/:id', method='POST')
                        input(hidden='', value=article._id, name='productId')
                        a.button.btn.btn-warning(href='/articles/edit/'+article.id+'' type='button' class='mx-2') Edit
                        button.btn.btn-danger(type='button') Delete


